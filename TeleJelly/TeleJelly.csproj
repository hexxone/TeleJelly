<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Jellyfin.Plugin.TeleJelly</RootNamespace>
    <AssemblyVersion>1.0.3.0</AssemblyVersion>
    <FileVersion>1.0.3.0</FileVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <MSBuildArgs>/property:GenerateFullPaths=true /consoleloggerparameters:NoSummary</MSBuildArgs>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PackageProjectUrl>https://github.com/hexxone/TeleJelly</PackageProjectUrl>
    <PackageLicenseUrl></PackageLicenseUrl>
    <RepositoryUrl>https://github.com/hexxone/TeleJelly</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Pages\Files\material_icons.woff2"/>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Config\*.js"/>
    <EmbeddedResource Include="Config\*.html"/>
    <EmbeddedResource Include="Config\*.css"/>
    <EmbeddedResource Include="Pages\*.js"/>
    <EmbeddedResource Include="Pages\*.html"/>
    <EmbeddedResource Include="Pages\*.css"/>
    <EmbeddedResource Include="Pages\Files\*"/>
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App"/>
    <PackageReference Include="ILRepack.Lib.MSBuild.Task" Version="2.0.26">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Jellyfin.Controller" Version="10.8.13"/>
    <PackageReference Include="Jellyfin.Model" Version="10.8.13"/>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.4"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SerilogAnalyzer" Version="0.15.0" PrivateAssets="All"/>
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.376" PrivateAssets="All"/>
    <PackageReference Include="SmartAnalyzers.MultithreadingAnalyzer" Version="1.1.31" PrivateAssets="All"/>
    <PackageReference Include="Telegram.Bot" Version="19.0.0"/>
    <PackageReference Include="WebMarkupMin.Core" Version="2.16.0"/>
  </ItemGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>../jellyfin.ruleset</CodeAnalysisRuleSet>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
    <Title>TeleJelly plugin</Title>
    <Description>Telegram Login provider plugin for Jelllyfin</Description>
    <Copyright>hexxone</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>jellyfin;jellyfin-plugin;telegram;telegram-bot;</PackageTags>
    <Nullable>enable</Nullable>
    <Version>1.0.3.0</Version>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <PropertyGroup>
    <LocalAppDataPath>$(LocalAppData)</LocalAppDataPath>
  </PropertyGroup>

  <Target Name="ILRepacker" AfterTargets="Build">
    <Message Importance="high" Text="
      Repacking DLLs...
    "/>
    <ItemGroup>
      <ILRepackAssemblies Include="$(TargetPath)"/>
      <ILRepackAssemblies Include="@(ReferencePathWithRefAssemblies)" Condition="'%(filename)' == 'Newtonsoft.Json' Or '%(filename)' == 'Telegram.Bot' Or '%(filename)' == 'Microsoft.Extensions.Logging'"/>
    </ItemGroup>
    <ILRepack
      Parallel="true"
      DebugInfo="true"
      Internalize="false"
      NoRepackRes="true"
      Verbose="true"
      InputAssemblies="@(ILRepackAssemblies)"
      TargetKind="Dll"
      OutputFile="$(OutDir)merged/$(AssemblyName).dll"
    />
    <Copy
      Condition="'$(Configuration)' == 'Release'"
      SourceFiles="$(OutDir)merged/$(AssemblyName).dll"
      DestinationFolder="$(PublishDir)/merged/"
      OverwriteReadOnlyFiles="true"
    />
  </Target>

  <Target Name="PostBuild" AfterTargets="ILRepacker" Condition=" '$(OS)' == 'Windows_NT' And '$(Configuration)' == 'Debug' ">
    <Message Importance="high" Text="
      Copying built Plugin to JellyFin Server...
    "/>
    <Delete Files="$(LocalAppDataPath)/jellyfin/plugins/TeleJelly/**/*"/>
    <Copy
      SourceFiles="$(OutDir)merged/$(ProjectName).dll"
      DestinationFolder="$(LocalAppDataPath)/jellyfin/plugins/TeleJelly"
      OverwriteReadOnlyFiles="true"
    />
  </Target>

</Project>
