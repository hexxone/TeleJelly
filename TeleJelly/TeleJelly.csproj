  <Target Name="CopyToServer" AfterTargets="CleanReferenceCopyLocalPaths" Condition="'$(OS)' == 'Windows_NT' and '$(Configuration)'=='Debug'">
    <Message Importance="high" Text="&#xA;      Copying built Plugin to JellyFin Server...&#xA;    " />
    <ItemGroup>
      <ServerFilesToDelete Include="$(LocalAppDataPath)/jellyfin/plugins/TeleJelly/**/*.*" />
      <BuiltFilesToCopy Include="$(OutDir)/**/*.*" />
    </ItemGroup>
    <Delete Files="$(ServerFilesToDelete)" />
    <Copy SourceFiles="@(BuiltFilesToCopy)" DestinationFolder="$(LocalAppDataPath)/jellyfin/plugins/TeleJelly/%(RecursiveDir)" OverwriteReadOnlyFiles="true" />
  </Target>
  
  <Target Name="ReleaseZip" AfterTargets="CleanReferenceCopyLocalPaths" Condition="'$(Configuration)'=='Release'">
    <Message Importance="high" Text="&#xA;      Creating Release ZIP Archive...&#xA;    " />
    <ItemGroup>
      <OldReleaseFiles Include="$(ProjectDir)..\TeleJelly*.zip"/>
      <TempZipDirectory Include="$(OutputPath)output" />
    </ItemGroup>
    <Delete Files="@(OldReleaseFiles)" />
    <Copy SourceFiles="$(OutDir)$(AssemblyName).dll" DestinationFolder="@(TempZipDirectory)" />
    <ZipDirectory SourceDirectory="@(TempZipDirectory)" DestinationFile="$(ProjectDir)..\TeleJelly_v$(Version).zip" />
    <RemoveDir Directories="@(TempZipDirectory)" />
  </Target>
  
</Project>
